@model TestForMe.Models.Groups

@{
    ViewData["Title"] = "DeleteCompany";
}

<h2>DeleteCompany</h2>

<h3>Are you sure you want to delete this?</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteCompany" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly asp-route-id="@Model.Id"/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NameofCompany" class="control-label"></label>
                <input asp-for="NameofCompany" class="form-control" readonly />
                <span asp-validation-for="NameofCompany" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" readonly />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Owner" class="control-label"></label>
                <input asp-for="Owner" class="form-control" readonly />
                <span asp-validation-for="Owner" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-warning" />
            </div>
        </form>

    </div>
</div>
<br />
